<div class="ui segment breadcrumb">
  <%= link_to '返回', admin_log_records_path, class: 'section' %>
  <div class="divider"> / </div>
  <div class="section">详细</div>
</div>

<table class="ui very basic fixed table">
  <tbody>
    <tr>
      <td class="two wide"><%= LogRecord.human_attribute_name(:created_at) %></td>
      <td class="fourteen wide"><time><%= @log_record.created_at.to_s(:rfc822) %></time></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:exception_object) %></td>
      <td><%= @log_record.exception_object %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:path) %></td>
      <td><%= @log_record.path %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:controller) %></td>
      <td><%= @log_record.controller %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:action) %></td>
      <td><%= @log_record.action %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:params) %></td>
      <td><%= simple_format_hash @log_record.params %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:cookie) %></td>
      <td><%= simple_format_hash @log_record.cookie %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:session) %></td>
      <td><%= simple_format_hash @log_record.session %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:headers) %></td>
      <td><%= simple_format_hash @log_record.headers %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:exception) %></td>
      <td><%= simple_format @log_record.exception %></td>
    </tr>
    <tr>
      <td><%= LogRecord.human_attribute_name(:exception_backtrace) %></td>
      <td><%= simple_format @log_record.exception_backtrace %></td>
    </tr>
  </tbody>
</table>
